@model EFitness.Models.Achievement

<h2>Delete Achievement</h2>

<p>Are you sure you want to delete this achievement?</p>
<div>
    <p><strong>Member:</strong> @Model.Member.FullName</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Date Achieved:</strong> @Model.DateAchieved.ToString("d")</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
</form>

<a asp-action="Index">Back to List</a>
