@model IEnumerable<EFitness.Models.Achievement>

<h1>Achievements</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Member</th>
            <th>Description</th>
            <th>Date Achieved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var achievement in Model)
        {
            <tr>
                <td>@achievement.Id</td>
                <td>@achievement.Member?.FullName</td>
                <td>@achievement.Description</td>
                <td>@achievement.DateAchieved.ToString("d")</td>
                <td>
                    <a asp-controller="Achievements" asp-action="Details" asp-route-id="@achievement.Id" class="btn btn-info">Details</a>
                    <a asp-controller="Achievements" asp-action="Edit" asp-route-id="@achievement.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Achievements" asp-action="Delete" asp-route-id="@achievement.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Achievements" asp-action="Create" class="btn btn-primary">Add New Achievement</a>
