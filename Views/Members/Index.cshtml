@model IEnumerable<EFitness.Models.Member>

<h2>Člani</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ime in priimek</th>
            <th>E-pošta</th>
            <th>Telefon</th>
            <th>Cilji</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.FullName</td>
                <td>@member.Email</td>
                <td>@member.Phone</td>
                <td>@member.Goals</td>
                <td>
                    <a asp-controller="Members" asp-action="Details" asp-route-id="@member.Id" class="btn btn-info btn-sm">Podrobnosti</a>
                    <a asp-controller="Members" asp-action="Edit" asp-route-id="@member.Id" class="btn btn-warning btn-sm">Uredi</a>
                    <a asp-controller="Members" asp-action="Delete" asp-route-id="@member.Id" class="btn btn-danger btn-sm">Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Members" asp-action="Create" class="btn btn-primary">Dodaj novega člana</a>
