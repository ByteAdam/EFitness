@model IEnumerable<EFitness.Models.Reservation>

<h2>Reservations</h2>
<table>
    <thead>
        <tr>
            <th>Member</th>
            <th>Activity</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Member.FullName</td>
                <td>@reservation.Activity1.Name</td>
                <td>@reservation.Date.ToString("g")</td>
                <td>
                    <a asp-controller="Reservation" asp-action="Details" asp-route-id="@reservation.Id">Details</a> |
                    <a asp-controller="Reservation" asp-action="Edit" asp-route-id="@reservation.Id">Edit</a> |
                    <a asp-controller="Reservation" asp-action="Delete" asp-route-id="@reservation.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Reservation" asp-action="Create">Add New Reservation</a>