@model IEnumerable<EFitness.Models.Activity1>

<h2>Activities</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Schedule</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Description</td>
                <td>@activity.Schedule.ToString("g")</td>
                <td>
                    <a asp-controller="Activity1" asp-action="Details" asp-route-id="@activity.Id">Details</a> |
                    <a asp-controller="Activity1" asp-action="Edit" asp-route-id="@activity.Id">Edit</a> |
                    <a asp-controller="Activity1" asp-action="Delete" asp-route-id="@activity.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Activity1" asp-action="Create">Add New Activity</a>
