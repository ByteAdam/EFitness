@model IEnumerable<EFitness.Models.Activity1>

<h2>Aktivnosti</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ime aktivnosti</th>
            <th>Opis</th>
            <th>Urnik</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Description</td>
                <td>@activity.Schedule</td>
                <td>
                    <a asp-controller="Activities" asp-action="Details" asp-route-id="@activity.Id" class="btn btn-info btn-sm">Podrobnosti</a>
                    <a asp-controller="Activities" asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-warning btn-sm">Uredi</a>
                    <a asp-controller="Activities" asp-action="Delete" asp-route-id="@activity.Id" class="btn btn-danger btn-sm">Izbri≈°i</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Activities" asp-action="Create" class="btn btn-primary">Dodaj novo aktivnost</a>
