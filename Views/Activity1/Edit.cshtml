@model EFitness.Models.Activity1

<h2>Uredi aktivnost</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="form-label">Ime aktivnosti</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Schedule" class="form-label">Urnik</label>
        <input asp-for="Schedule" class="form-control" />
        <span asp-validation-for="Schedule" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Shrani</button>
    <a asp-action="Index" class="btn btn-secondary">Prekliƒçi</a>
</form>
