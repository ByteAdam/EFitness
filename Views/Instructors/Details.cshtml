@model EFitness.Models.Instructor

<h2>Podrobnosti inštruktorja</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <p class="card-text"><strong>Specializacija:</strong> @Model.Expertise</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Nazaj na seznam</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Uredi</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Izbriši</a>
