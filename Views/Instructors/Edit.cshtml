@model EFitness.Models.Instructor

<h2>Uredi podatke inštruktorja</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="FullName" class="form-label">Ime in priimek</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Expertise" class="form-label">Specializacija</label>
        <input asp-for="Expertise" class="form-control" />
        <span asp-validation-for="Expertise" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Shrani</button>
    <a asp-action="Index" class="btn btn-secondary">Prekliči</a>
</form>
