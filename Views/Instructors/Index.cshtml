@model IEnumerable<EFitness.Models.Instructor>

<h2>Inštruktorji</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ime in priimek</th>
            <th>Specializacija</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.FullName</td>
                <td>@instructor.Expertise</td>
                <td>
                    <a asp-controller="Instructors" asp-action="Details" asp-route-id="@instructor.Id" class="btn btn-info btn-sm">Podrobnosti</a>
                    <a asp-controller="Instructors" asp-action="Edit" asp-route-id="@instructor.Id" class="btn btn-warning btn-sm">Uredi</a>
                    <a asp-controller="Instructors" asp-action="Delete" asp-route-id="@instructor.Id" class="btn btn-danger btn-sm">Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Instructors" asp-action="Create" class="btn btn-primary">Dodaj novega inštruktorja</a>
